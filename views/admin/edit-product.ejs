<%- include('../includes/head')%> <%- include('../includes/nav')%>
<main>
  <form
    class="product-form"
    action="/admin/<% if (edit) { %>edit-product<%}else{%>add-product<%}%>"
    method="post"
  >
    <div class="form-control">
      <label for="title">Title</label>
      <input
        type="text"
        name="title"
        id="title"
        value="<% if (edit) { %><%=product.title%> <%}%>"
      />
    </div>
    <div class="form-control">
      <label for="imageUrl">Image Url</label>
      <input
        type="text"
        name="imageUrl"
        id="imageUrl"
        value="<% if (edit) { %><%=product.imageUrl%> <%}%>"
      />
    </div>
    <div class="form-control">
      <label for="price">Price</label>
      <input
        type="text"
        name="price"
        step="0.01"
        id="price"
        value="<% if (edit) { %><%=product.price%> <%}%>"
      />
    </div>
    <div class="form-control">
      <label for="description">Description</label>
      <textarea name="description" id="description" rows="5">
<% if (edit) { %><%=product.description%> <%}%></textarea
      >
    </div>
    <% if (edit) {%>
    <input type="hidden" value="<%=product.ID%>" name="productId" />
    <% } %>
    <button type="submit" class="btn">
      <% if (edit) { %> Update Product <% } else { %> Add Product <% } %>
    </button>
  </form>
</main>
<%- include('../includes/footer')%>
